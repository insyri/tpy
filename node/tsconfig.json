{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["DOM"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false
  },
  "include": ["src", "mod.ts"],
  "exclude": ["node_modules"]
}
