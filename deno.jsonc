{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "lib": [
      "deno.window"
    ],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "useTabs": false,
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "lint": {
    "rules": {
      "include": ["no-inferrable-types"]
    }
  },
  "tasks": {
    "precommit": "deno lint && deno fmt",
    "dnt": "deno run --allow-read --allow-write --allow-run --allow-env _npm.ts"
  }
}
