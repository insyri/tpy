{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"outDir": "dist",
		"lib": ["ESNext"],
		"moduleResolution": "Node",
		"declaration": true,
		"rootDir": "src/node", // Node only.
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
	},
	"exclude": ["node_modules"],
	"include": ["src"],
}
